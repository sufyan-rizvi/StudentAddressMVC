@model StudentViewTemplatesDemoCRUD.Models.Address



<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ViewAddress</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    
</head>
<body class="bg-success-subtle m-2">
    @if (Model != null)
    {
        <div>
            <h1 >Address</h1>
            <hr />
            <dl class="dl-horizontal">
                <table class="table table-hover shadow-lg">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Country)
                        </th>

                        <th>
                            @Html.DisplayNameFor(model => model.City)
                        </th>

                        <th>
                            @Html.DisplayNameFor(model => model.State)
                        </th>

                    </tr>

                    <tr>
                        <td>@Html.DisplayFor(model => model.Country)</td>
                        <td>@Html.DisplayFor(model => model.City)</td>
                        <td>@Html.DisplayFor(model => model.State)</td>
                    </tr>
                </table>
                

            </dl>
        </div>
        <p>

            @Html.ActionLink("Edit This Address", "Edit",null, new{@class = "btn btn-warning text-dark"})
            @Html.ActionLink("Delete This Address", "delete",null, new{@class = "btn btn-danger text-dark"})
        </p>
    }

    else
    {
        <div class="alert alert-danger">No Address Found</div>    
        @Html.ActionLink("Add Address", "addAddress", null, new {@class = "btn btn-primary"})
    }
    </p>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
