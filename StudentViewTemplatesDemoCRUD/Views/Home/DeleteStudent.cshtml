@model StudentViewTemplatesDemoCRUD.Models.Student



<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>DeleteStudent</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    
</head>
<body class = "bg-success-subtle">
    
    <div class="m-2">
        <h3 class="text-danger">Are you sure you want to delete Student @Model.Id?</h3>
        <hr>

        <dl class="dl-horizontal">
            <dt class="fs-5">
                @Html.DisplayNameFor(model => model.Name):  @Html.DisplayFor(model => model.Name)
            </dt>

            

            <dt class="fs-5">
                @Html.DisplayNameFor(model => model.Age): @Html.DisplayFor(model => model.Age)
            </dt>

        </dl>

        @using (Html.BeginForm("deletestudent", "home"))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.Id)
            @Html.HiddenFor(model => model.Name)
            @Html.HiddenFor(model => model.Age)

            @Html.HiddenFor(model => model.Address.Id)
            @Html.HiddenFor(model => model.Address.City)
            @Html.HiddenFor(model => model.Address.Country)
            @Html.HiddenFor(model => model.Address.State)

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-danger w-25" />

            </div>
        }
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
